<div class="page active" id="dashboard">
    <h2>Real-Time Statistics</h2>
    <!-- Activity Metrics -->
    <section class="activity-metrics-panel">
        <div class="metric-item">
            <i class="fas fa-server"></i>
            <div class="metric-details">
                <h4>Server Uptime</h4>
                <p id="server-uptime">Calculating...</p>
            </div>
        </div>

        <div class="metric-item">
            <i class="fas fa-terminal"></i>
            <div class="metric-details">
                <h4>Commands Run</h4>
                <p id="commands-run">0</p>
            </div>
        </div>

        <div class="metric-item">
            <i class="fas fa-circle" id="status-indicator"></i>
            <div class="metric-details">
                <h4>Bot Status</h4>
                <p id="bot-status">Connecting...</p>
            </div>
        </div>

        <div class="metric-item">
            <i class="fas fa-crown"></i>
            <div class="metric-details">
                <h4>Popular Command</h4>
                <p id="popular-command">Calculating...</p>
            </div>
        </div>
    </section>

    <!-- System Information -->
    <section class="system-info-panel">
        <div class="info-item">
            <i class="fas fa-microchip"></i>
            <div class="info-details">
                <h4>CPU Load</h4>
                <p id="cpu-load">Calculating...</p>
            </div>
        </div>

        <div class="info-item">
            <i class="fas fa-memory"></i>
            <div class="info-details">
                <h4>Memory Usage</h4>
                <p id="memory-usage">Calculating...</p>
            </div>
        </div>

        <div class="info-item">
            <i class="fas fa-code-branch"></i>
            <div class="info-details">
                <h4>Node.js</h4>
                <p id="node-version">Calculating...</p>
            </div>
        </div>

        <div class="info-item">
            <i class="fas fa-network-wired"></i>
            <div class="info-details">
                <h4>API Latency</h4>
                <p id="api-ping">Calculating...</p>
            </div>
        </div>

        <div class="info-item">
            <i class="fab fa-discord"></i>
            <div class="info-details">
                <h4>d.js Version</h4>
                <p id="djs-version">Calculating...</p>
            </div>
        </div>

        <div class="info-item">
            <i class="fas fa-desktop"></i>
            <div class="info-details">
                <h4>Platform</h4>
                <p id="platform">Calculating...</p>
            </div>
        </div>
    </section>

    <!-- Grid Stats -->
    <section class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon"><i class="fas fa-clock"></i></div>
            <div class="stat-info">
                <h3>Uptime</h3>
                <p id="uptime">Loading...</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon"><i class="fas fa-server"></i></div>
            <div class="stat-info">
                <h3>Servers</h3>
                <p id="server-count">Loading...</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon"><i class="fas fa-users"></i></div>
            <div class="stat-info">
                <h3>Total Users</h3>
                <p id="user-count">Loading...</p>
            </div>
        </div>
    </section>

    <!-- Two Column Section -->
    <div class="two-column-wrapper">
        <!-- Recent Activity -->
        <div class="recent-activity">
            <h3>Recent Activity</h3>
            <ul id="activity-list">
                <li>Loading activity logs...</li>
            </ul>
        </div>

        <!-- Announcement -->
        <div class="announcement-box">
            <h3>Latest Update</h3>
            <p>
                Bot telah diperbarui ke versi <b>v2.0</b> dengan peningkatan
                stabilitas, optimasi performa, dan penambahan beberapa fitur
                baru termasuk command AI dan monitoring otomatis.
            </p>
        </div>
    </div>
</div>